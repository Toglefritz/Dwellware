{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "User Application Manifest",
  "type": "object",
  "required": [
    "id",
    "title",
    "description",
    "status",
    "createdAt",
    "updatedAt",
    "iconUrl",
    "category",
    "tags",
    "progress"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique identifier for the application."
    },
    "title": {
      "type": "string",
      "description": "Human-readable title of the application."
    },
    "description": {
      "type": "string",
      "description": "Detailed description of the application."
    },
    "status": {
      "type": "string",
      "description": "Current lifecycle status of the application.",
      "enum": [
        "requested",
        "developing",
        "testing",
        "ready",
        "running",
        "failed",
        "updating"
      ]
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO8601 timestamp when the application was created."
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "ISO8601 timestamp when the application was last updated."
    },
    "iconUrl": {
      "type": "string",
      "format": "uri",
      "description": "URL pointing to an icon representing the application."
    },
    "category": {
      "type": "string",
      "description": "Primary category for organizing and filtering the application.",
      "enum": [
        "homeManagement",
        "finance",
        "planning",
        "healthAndFitness",
        "education",
        "entertainment",
        "utilities",
        "communication",
        "security",
        "shopping",
        "transportation",
        "petCare",
        "gardenAndOutdoor",
        "recipesAndCooking",
        "workAndProductivity",
        "other"
      ]
    },
    "tags": {
      "type": "array",
      "description": "Additional tags for detailed categorization and search.",
      "items": {
        "type": "string"
      }
    },
    "progress": {
      "type": "object",
      "required": [
        "percentage",
        "currentPhase",
        "lastUpdated"
      ],
      "properties": {
        "percentage": {
          "type": "number",
          "minimum": 0,
          "maximum": 100,
          "description": "Completion percentage for the application's current development cycle."
        },
        "currentPhase": {
          "type": "string",
          "description": "Human-readable label for the current development phase."
        },
        "developmentStatement": {
          "type": "string",
          "description": "User-friendly message about the current development phase, formatted as a chat message from Kiro IDE to the user."
        },
        "lastUpdated": {
          "type": "string",
          "format": "date-time",
          "description": "ISO8601 timestamp of the last progress update."
        },
        "estimatedCompletion": {
          "type": "string",
          "format": "date-time",
          "description": "Estimated ISO8601 timestamp when the application will be completed."
        },
        "milestones": {
          "type": "array",
          "description": "Optional milestones marking important checkpoints in development.",
          "items": {
            "type": "object",
            "properties": {
              "name": {
                "type": "string"
              },
              "completed": {
                "type": "boolean"
              },
              "timestamp": {
                "type": "string",
                "format": "date-time"
              }
            },
            "required": [
              "name",
              "completed"
            ]
          }
        }
      }
    }
  },
  "additionalProperties": false
}