{
  "name": "kiro-command-research",
  "displayName": "Kiro Command Research Tool",
  "description": "Research and document Kiro IDE commands for remote orchestration",
  "version": "0.6.1",
  "publisher": "household-ai-engineer",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "kiroCommandResearch.discoverCommands",
        "title": "Discover Kiro Commands",
        "category": "Kiro Research"
      },
      {
        "command": "kiroCommandResearch.testCommand",
        "title": "Test Command",
        "category": "Kiro Research"
      },
      {
        "command": "kiroCommandResearch.generateDocs",
        "title": "Generate Documentation",
        "category": "Kiro Research"
      },
      {
        "command": "kiroCommandResearch.openExplorer",
        "title": "Open Command Explorer",
        "category": "Kiro Research"
      },
      {
        "command": "kiroCommandResearch.viewResults",
        "title": "View Discovery Results",
        "category": "Kiro Research"
      },
      {
        "command": "kiroCommandResearch.researchParameters",
        "title": "Research Command Parameters",
        "category": "Kiro Research"
      }
    ],
    "views": {
      "explorer": [
        {
          "id": "kiroCommandExplorer",
          "name": "Kiro Commands",
          "when": "kiroCommandResearch.active"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "kiroCommandExplorer",
        "contents": "No Kiro commands discovered yet.\n[Discover Commands](command:kiroCommandResearch.discoverCommands)"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "typescript": "^4.9.4"
  }
}
